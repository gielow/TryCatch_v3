@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logoff", "Customer", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(@User.Identity.GetUserName(), "Details", "Customer", routeValues: null, htmlAttributes: new { title = "Details" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Logoff</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Login", "Login", "Customer", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
