@model TryCatch.Models.Cart

@{
    ViewBag.Title = "Index";
}

<h2>Cart</h2>

<table class="table" id="cart">
    <tr>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th></th>
    </tr>
    
    <tbody id="cartItems">
        @Html.Partial("~/Views/Cart/_CartItemsGridPartial.cshtml", Model)
    </tbody>
</table>

<div class="modal fade" id="articleModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

@Html.ActionLink("Checkout", "ConfirmCheckout", "Cart")

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Content/Script/cart.js")
@Scripts.Render("~/Content/Script/article.index.js")