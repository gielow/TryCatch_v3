@model TryCatch.Models.Cart

@{
    ViewBag.Title = "Index";
}

<h2>Cart</h2>

<table class="table" id="cart">
    <tr>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th></th>
    </tr>
    
    <tbody id="cartItems">
        @Html.Partial("~/Views/Cart/_CartItemsGridPartial.cshtml", Model)
    </tbody>
</table>

@Html.ActionLink("Checkout", "ConfirmCheckout", "Cart")

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Content/Script/cart.js")